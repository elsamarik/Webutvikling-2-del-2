<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/main-style.css")">
    <title>Nordisk Luksus</title>

</head>
<body>
    <div>
        <header id="header">
            
            <a id="logo" asp-controller="UserProduct" 
                asp-action="ShowProducts">Velkommen til Nordisk Luksus</a>
        </header>

        <nav id="navbar">
                 <a asp-controller="UserProduct" 
                asp-action="ShowProducts">Vis alle produktene</a>        
                <a asp-controller="UserProduct" asp-action="WriteCustomerOrders">Skriv en bestilling</a>
                <a asp-controller="AdminProduct" asp-action="AdminPage">Admin side</a>
        </nav>
        
        <main>
            @RenderBody()
        </main>

        <footer>
            <p id="footer">Nordisk Luksus &copy; 2018</p>
        </footer>
    </div>


</body>
</html>